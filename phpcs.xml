<?xml version="1.0"?>
<ruleset name="Custom PHP_CodeSniffer Configuration">
    <description>Custom ruleset for detecting unused variables in app, config, and routes folders</description>
    
    <!-- Include VariableAnalysis for unused variable detection -->
    <rule ref="vendor/sirbrillig/phpcs-variable-analysis/VariableAnalysis"/>
    
    <!-- Files to check -->
    <file>app/</file>
    <file>config/</file>
    <file>routes/</file>
    
    <!-- Exclude other directories -->
    <exclude-pattern>bootstrap/</exclude-pattern>
    <exclude-pattern>database/</exclude-pattern>
    <exclude-pattern>public/</exclude-pattern>
    <exclude-pattern>resources/</exclude-pattern>
    <exclude-pattern>storage/</exclude-pattern>
    <exclude-pattern>tests/</exclude-pattern>
    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>node_modules/</exclude-pattern>
</ruleset>
